<!DOCTYPE html>
<html>
    <!-- This is my heading now -->
    <%- include ('../partials/head.ejs', {page: 'New'}) %>
    
    <!-- This is my nav bar now -->
    <%- include ('../partials/nav.ejs') %>

        <section class="hero-is-medium has-background-light">
            <div class="hero-body">
                <h1 class="title">New artWork page</h1>
            </div>
        </section>
            <form action="/artWorks" method="POST">
                <div class="field">
                    <label class="label">artWork Name</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            placeholder="My new favorite artWork"
                            name="name"
                        />
                    </div>
                </div>
        
                <div class="field">
                    <label class="label">artWork Price</label>
                    <div class="control">
                        <input class="input" type="number" placeholder="32" name="price" />
                    </div>
                </div>
        
                <div class="field">
                    <label class="label">artWork Image</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            placeholder="http://"
                            name="image"
                        />
                    </div>
                </div>
                <div class="field">
                    <label class="label">artWork Description</label>
                    <div class="control">
                        <input
                            class="input"
                            type="text"
                            placeholder="Tell the Users all about this"
                            name="description"
                        />
                    </div>
                </div>
        
                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-info">Create artWork</button>
                    </div>
                </div>
            </form>
        </section>
    </body>
</html>